<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/intervalColor"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/disLight"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/layout_normal"
            android:background="@color/highLight"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/fontColor_gray"
                android:textSize="15sp"
                android:gravity="center"
                android:text="普通订单"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:id="@+id/line_normal"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:background="@color/lineColor"
            android:layout_marginBottom="2dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_duobao"
            android:background="@color/disLight"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/fontColor_gray"
                android:textSize="15sp"
                android:gravity="center"
                android:text="夺宝订单"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:id="@+id/line_duobao"
                android:visibility="invisible"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.zhenghui.zhqb.merchant.util.RefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </com.zhenghui.zhqb.merchant.util.RefreshLayout>

</LinearLayout>