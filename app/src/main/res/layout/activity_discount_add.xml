<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/lineColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.merchant.activity.WithdrawalsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/orange" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新增折扣券"
            android:textColor="@color/fontColor_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_commit"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fontColor_white"
            android:textSize="17sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="折扣券名称"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_name"
                    android:hint="请输入折扣券名称"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="@color/fontColor_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/layout_type"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="折扣方式"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_type"
                    android:gravity="right"
                    android:text="满减"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/more_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="使用条件"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_key1"
                    android:hint="请输入最低使用门槛"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginRight="2dp"
                    android:inputType="number"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="@color/fontColor_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="元"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="满减金额"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_key2"
                    android:hint="请输入满减金额"
                    android:layout_marginRight="2dp"
                    android:textSize="14sp"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="@color/fontColor_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="元"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="起始时间"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_dateStart"
                    android:layout_marginRight="15dp"
                    android:hint="请选择有效期"
                    android:text=""
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="@color/fontColor_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/more_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="有效期至"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_dateEnd"
                    android:layout_marginRight="15dp"
                    android:textSize="14sp"
                    android:text=""
                    android:hint="请选择结束时间"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="@color/fontColor_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/more_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="使用详情"
                    android:textColor="@color/fontColor_gray"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_detail"
                    android:hint="请输入"
                    android:textSize="13sp"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="#333333"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_confirm"
                android:visibility="gone"
                android:gravity="center"
                android:text="下架"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corners_orange"
                android:layout_width="match_parent"
                android:layout_height="45dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
