<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/intervalColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.merchant.activity.BankCardChangeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/orange" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="更换银行卡"
            android:textColor="@color/fontColor_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="户名"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <View
                android:layout_marginLeft="15dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="开户行"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <View
                android:layout_marginLeft="15dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="银行卡号"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="某某"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="某某银行"
                    android:textSize="15sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/more_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <EditText
                android:hint="请输入卡号"
                android:inputType="number"
                android:layout_marginLeft="25dp"
                android:textColor="#333333"
                android:textColorHint="#aaaaaa"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_confirm"
        android:gravity="center"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corners_orange"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
